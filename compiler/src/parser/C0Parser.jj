void AssignmentOperator() :
{}
{
    <ASSIGN>
  | <PLUSASSIGN>
  | <MINUSASSIGN>
  | <STARASSIGN>
  | <SLASHASSIGN>
  | <REMASSIGN>
  | <ANDASSIGN>
  | <XORASSIGN>
  | <ORASSIGN>
}

void PostOp() :
{}
{
  <DECR> | <INCR>
}

