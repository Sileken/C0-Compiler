// Examples are: (test), test.data, test->data, *test, test[], test->data[0] =
// is LV not PrimaryExpression ?? 
void Lv() :
{}
{ 
<LPAREN> Lv() <RPAREN>
| VID() 
  [
    (
      <DOT> FID() 
      | <FIELD_DEREF> FID() 
      | (<LBRACKET> Expression() <RBRACKET>)
    )+
  ]
| <STAR> Lv()
}

